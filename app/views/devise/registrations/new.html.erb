<div class="login">
  <!-- BEGIN LOGO -->
  <div class="logo">
    <img src="/assets/logo-big.png" alt="" /> 
  </div>
  <!-- END LOGO -->
  <!-- BEGIN LOGIN -->
  <div class="content">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>
			<h3 class="">Sign Up</h3>
			<p>Enter your account details below:</p>
			<div class="control-group">
			  <label class="control-label visible-ie8 visible-ie9">Username</label>
			  <div class="controls">
				  <div class="input-icon left">
				    <i class="icon-user"></i>
				      <%= f.text_field :firstname, :class => "m-wrap placeholder-no-fix", :placeholder =>"Username" %>
				  </div>
			  </div>
			</div>
			<div class="control-group">
			  <label class="control-label visible-ie8 visible-ie9">Lastname</label>
			  <div class="controls">
				  <div class="input-icon left">
				    <i class="icon-user"></i>
				    <%= f.text_field :lastname, :class => "m-wrap placeholder-no-fix", :placeholder =>"Lastname" %>
				  </div>
			  </div>
			</div>
			<div class="control-group">
			  <label class="control-label visible-ie8 visible-ie9">Password</label>
			  <div class="controls">
				  <div class="input-icon left">
				    <i class="icon-lock"></i>
				    <%= f.password_field :password, :class => "m-wrap placeholder-no-fix", :placeholder => "Password"  %>
				  </div>
			  </div>
			</div>
			<div class="control-group">
			  <label class="control-label visible-ie8 visible-ie9">Re-type Your Password</label>
			  <div class="controls">
				  <div class="input-icon left">
				    <i class="icon-ok"></i>
				    <%= f.password_field :password_confirmation, :class => "m-wrap placeholder-no-fix", :placeholder => "Re-type Your Password"   %>
				  </div>
			  </div>
			</div>
			<div class="control-group">
			  <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
			  <label class="control-label visible-ie8 visible-ie9">Email</label>
			  <div class="controls">
				  <div class="input-icon left">
				    <i class="icon-envelope"></i>
				    <%= f.email_field :email, :class => "m-wrap placeholder-no-fix", :placeholder => "Email"  %>
				  </div>
			  </div>
			</div>
			<div class="control-group" >
			  <div class="controls">
				  <label class="checkbox">
				    <% if devise_mapping.rememberable? -%>
							<%= f.check_box :remember_me %> I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>
						<% end -%>
				  </label>  
				  <div id="register_tnc_error"></div>
			  </div>
			</div>
			<div class="form-actions">
			  <button id="register-back-btn" type="button" class="btn">
			    <i class="m-icon-swapleft"></i>  Back
			  </button>
			  <div><%= f.submit "Sign up", :class => "btn green pull-right" %> <i class="m-icon-swapright m-icon-white"></i></div>            
			</div>
		<% end %>
  </div>
</div>  
